<Window x:Class="PROG___Task_1.WelcomeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG___Task_1"
        mc:Ignorable="d"
        Title="WelcomeScreen" Height="450" Width="450" FontSize="14" Background="#04c582">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Welcome To The Dewey Decimal Game" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>
            <Button Name="btnReplacingBooks" Content="Replacing Books" Margin="20 20" Background="#545d6a" Foreground="White" FontSize="23" Height="50" Click="btnReplacingBooks_Click"/>
            <Button Name="btnIdentifyArea" Content="Identifying Areas" Margin="20 20" Background="#545d6a" Foreground="White" FontSize="23" Height="50" Click="btnIdentifyArea_Click"/>
            <Button Name="btnFindingCallNums" Content="Finding Call Numbers" Margin="20 20" Background="#545d6a" Foreground="White" FontSize="23" Height="50" Click="btnFindingCallNums_Click"/>
        </StackPanel>
    </Border>
</Window>
